{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment_pipelines": {
      "type": "String",
      "allowedValues": [
        "dev",
        "test",
        "production"
      ]
    },
    "serverfarms_bday_countdownServicePlan_name": {
      "defaultValue": "bday-countdownServicePlan",
      "type": "String"
    },
    "webapp_name": {
      "defaultValue": "[concat('bday-countdown-', parameters('environment_pipelines'), '-webapp')]",
      "type": "String"
    }
  },
  "variables": {
    "cacheName": "[concat('bday-countdown-rediscache-', uniqueString(resourceGroup().id))]",
    "cacheEnabledNonSslPort": true
  },
  "resources": [
    {
      "name": "[concat('storage', uniqueString(resourceGroup().id))]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2017-10-01",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "location": "westeurope"
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "sku": {
        "name": "B1",
        "tier": "Basic",
        "size": "B1",
        "family": "B",
        "capacity": 1
      },
      "kind": "app",
      "name": "[parameters('serverfarms_bday_countdownServicePlan_name')]",
      "apiVersion": "2016-09-01",
      "location": "West Europe",
      "properties": {
        "name": "[parameters('serverfarms_bday_countdownServicePlan_name')]"
      }
    },
    {
      "name": "[variables('cacheName')]",
      "type": "Microsoft.Cache/Redis",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [],
      "tags": {
        "displayName": "cache"
      },
      "properties": {
        "enableNonSslPort": "[variables('cacheEnabledNonSslPort')]",
        "sku": {
          "name": "Basic",
          "family": "C",
          "capacity": "0"
        }
      }
    },
    {
      "comments": "our webapp",
      "type": "Microsoft.Web/sites",
      "kind": "app",
      "name": "[parameters('webapp_name')]",
      "apiVersion": "2016-08-01",
      "location": "West Europe",
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(parameters('webapp_name'), '.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(parameters('webapp_name'), '.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_bday_countdownServicePlan_name'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "8.11.1"
            },
            {
              "name": "REDIS_PORT",
              "value": "6379"
            },
            {
              "name": "REDIS_HOSTNAME",
              "value": "[concat(variables('cacheName'), '.redis.cache.windows.net')]"
            },
            {
              "name": "REDIS_CREDENTIALS",
              "value": "[listKeys(resourceId('Microsoft.Cache/Redis', variables('cacheName')), '2015-08-01').primaryKey]"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_bday_countdownServicePlan_name'))]",
        "[concat('Microsoft.Cache/Redis/', variables('cacheName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/sites/config",
      "name": "[concat(parameters('webapp_name'), '/web')]",
      "apiVersion": "2016-08-01",
      "location": "West Europe",
      "properties": {
        "http20Enabled": true,
        "minTlsVersion": "1.2",
        "pythonVersion": "Off",
        "phpVersion": "Off",
        "defaultDocuments": ["hostingstart.html"],
        "nodeVersion": "8.11.1"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('webapp_name'))]"
      ]
    }
  ]
}
